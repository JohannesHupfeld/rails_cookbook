<h1>  New Recipe </h1>

<%= form_for(@recipe) do |f| %>

  <%= f.label "Choose a Category" %>
  <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %>

   <p>Or create a new category:
  <%= f.fields_for :category do |c|%>
    <%= c.text_field :name%>
  <% end %>
  </p>
  
  <%= f.label :name %>
  <%= f.text_area :name %>

  <%= f.label :ingredients %>
  <%= f.text_area :ingredient %> 

  <%= f.label :instructions %>
  <%= f.text_area :instruction %> 

  <%= f.submit %>
<% end%>