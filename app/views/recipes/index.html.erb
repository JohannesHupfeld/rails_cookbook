<%= index_display_header %>
<%= form_tag("/recipes", method: 'get') do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>

<br>
<%= form_tag("/recipes", method: 'get') do %>
  <%= label_tag(:category_id, "Select a Category:") %>
  <%= collection_select(:recipe,:category_id, Category.all,:id, :name) %>
  <%= submit_tag("Filter") %>
<% end %>
<% if @recipes.blank? %>

    <h2>No recipes yet. Write a recipe <%= link_to "here", new_recipe_path%></h2>

<% else %>
  <%= render partial: "recipes", locals: {recipes: @posts} %>
<% end %>